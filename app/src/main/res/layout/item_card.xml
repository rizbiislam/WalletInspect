<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layExpense"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_below="@id/layCircle"
        android:layout_marginTop="20dp"
        android:background="@drawable/bottom_shade"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/expense" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="132dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvt"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvamounte"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:text="BDT 0.00"
                android:textAlignment="viewEnd"
                android:textColor="#F44336"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvdate"
                android:layout_width="238dp"
                android:layout_height="31dp"
                android:background="#F0FAF9F6"
                android:hint="Date and Time"
                android:textAlignment="viewEnd"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvreason"
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="#80FFEB3B"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="3dp"
                    android:text="Reason"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvdelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#E3190B"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="3dp"
                    android:text="Delete this Data"
                    android:textColor="#F4ECEC"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
